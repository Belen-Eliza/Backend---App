generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  mail String @unique
  name String
  password String
  saldo Float @default(0)

  gastos Gasto[]
  gastos_fijos GastoFijo[]
  ingresos Ingreso[]

  Presupuesto Presupuesto[]
}

model CategoryGasto { //Las categorías de gastos
  id Int @id @default(autoincrement())
  name String
  description String

  gastos Gasto[]
  gastos_fijos GastoFijo[]
}
model CategoryIngreso { //Las categorías de ingresos
  id Int @id @default(autoincrement())
  name String
  description String

  ingresos Ingreso[]
}

model Gasto {
  id Int @id @default(autoincrement())
  monto Float
  cant_cuotas Int @default(1)
  fecha DateTime 
  user User @relation(fields: [user_id],references: [id])
  user_id Int 
  category CategoryGasto @relation(fields: [category_id],references: [id])
  category_id Int
}

model GastoFijo {
  id Int @id @default(autoincrement())
  monto Float
  fecha_inicial DateTime 
  cant_meses Int //time? 
  user User @relation(fields: [user_id],references: [id])
  user_id Int 
  category CategoryGasto @relation(fields: [category_id],references: [id])
  category_id Int
}

model Ingreso {
  id Int @id @default(autoincrement())
  monto Float
  description String
  category CategoryIngreso @relation(fields: [category_id],references: [id])
  category_id Int
  user User @relation(fields: [user_id],references: [id])
  user_id Int
}

model Presupuesto {
  id Int @id @default(autoincrement())
  descripcion String
  montoTotal Float
  cant_cuotas Int @default(1)
  fecha_objetivo DateTime
  total_acumulado Float //guardar o calcular?
  user User @relation(fields: [user_id],references: [id])
  user_id Int
  ahorro Ahorro_Presupuesto[] 
}

model Ahorro_Presupuesto {
  id Int @id @default(autoincrement())
  monto Float
  fecha DateTime
  presupuesto Presupuesto @relation(fields: [presupuesto_id],references: [id])
  presupuesto_id Int
}